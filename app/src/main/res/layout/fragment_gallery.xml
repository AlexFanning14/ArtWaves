<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.alexfanning.artwaves.fragments.GalleryFragment"
    android:padding="@dimen/rv_staggered_margins">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_gallery"
        />
    <TextView
        android:id="@+id/tv_error_gallery"
        style="@style/TextViewStyleNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_standard"
        android:gravity="center"
        android:text="@string/gal_error"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/gal_progbar"
        android:layout_width="@dimen/prog_bar_size"
        android:layout_height="@dimen/prog_bar_size"
        android:layout_gravity="center"
        android:visibility="gone" />


</FrameLayout>
